<section class="m-announcements-container">
  <div class="m-announcements-grid-layout">
    <div class="m-announcement-section m-visible">
      <div class="m-heading-section">
        <h1>UPDATE NOTICE</h1>
        <span class="m-strip"></span>
      </div>

      <%= form_for @news, url: news_update_path do |f| %>
        <div style="margin: 2rem 0;">
          <%= f.label "Announcement", nil, style: "font-family: 'Saira'; font-size: 24px; color: #312229; display: block; margin-bottom: 1rem;" %>
          <%= f.text_area :news, 
              required: true, 
              rows: 6,
              style: "width: 100%; padding: 1rem; font-family: 'Hind'; font-size: 18px; border: 2px solid #b18653; border-radius: 6px; resize: vertical; box-sizing: border-box;" %>
        </div>

        <div style="display: flex; gap: 1rem; margin-top: 2rem;">
          <%= f.submit "अग्रेस्थापनं करोतु", class: "m-button" , style: "background-color: #54101d; color: white"%>
          <%= link_to "प्रतिगच्छतु", home_path, class: "m-button", style: "background-color: #b18653; color: white" %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Make section visible immediately
  const announcementSection = document.querySelector('.m-announcement-section');
  if (announcementSection) {
    announcementSection.classList.add('m-visible');
  }
});
</script>