<div class="team-page">
  <div class="team-hero">
    <h1>संस्कृतसत्यार्थसेवकाः</h1>
    <p class="hero-subtitle">Sanskrit Club Volunteers</p>
  </div>

  <!-- Group Photos Gallery Section -->
  <div class="group-gallery">
    <div class="gallery-slider">
      <div class="gallery-track">
        <% if @group_photos.present? && @group_photos.any? %>
          <!-- Duplicate images 3 times for seamless loop -->
          <% 3.times do %>
            <% @group_photos.each do |photo| %>
              <div class="gallery-item">
                <%= image_tag photo, class: "gallery-image", alt: "Group photo" %>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <!-- Placeholder images if no photos uploaded -->
          <% 3.times do %>
            <% 6.times do |i| %>
              <div class="gallery-item">
                <div class="gallery-placeholder">
                  <i class="fa-solid fa-users"></i>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Current Team Members Section -->
  <div class="section-header">
    <h2>वर्तमानाः सदस्याः</h2>
    <p class="section-subtitle">Current Team Members</p>
  </div>

  <% if @teams.empty? %>
    <div class="empty-state">
      <i class="fa-solid fa-users" style="font-size: 64px; color: #ccc;"></i>
      <h2>टीम सदस्याः शीघ्रमेव आगमिष्यन्ति</h2>
      <p>कृपया पुनः आगच्छतु</p>
    </div>
  <% else %>
    <div class="team-grid">
      <% @teams.each do |team| %>
        <div class="member-card">
          <div class="member-image-wrapper">
            <% if team.image.attached? %>
              <%= image_tag team.image, alt: team.name, class: "member-photo" %>
            <% else %>
              <div class="member-placeholder">
                <i class="fa-solid fa-user"></i>
              </div>
            <% end %>
            <div class="member-overlay">
              <a href="mailto:<%= team.mail %>" class="overlay-contact" title="सम्पर्कं करोतु">
                <i class="fa-solid fa-envelope"></i>
              </a>
            </div>
          </div>
          
          <div class="member-details">
            <h3 class="member-name"><%= team.name %></h3>
            <div class="member-info-row">
              <span class="member-tag"><i class="fa-solid fa-graduation-cap"></i> <%= team.branch %></span>
              <span class="member-tag"><i class="fa-solid fa-layer-group"></i> <%= team.year %></span>
            </div>
          </div>
          
          <div class="card-footer-accent"></div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Alumni Section -->
  <div class="section-header alumni-section">
    <h2>पूर्वछात्राः</h2>
    <p class="section-subtitle">Our Esteemed Alumni</p>
  </div>

  <% if @alumnis.present? && @alumnis.any? %>
    <div class="team-grid alumni-grid">
      <% @alumnis.each do |alumni| %>
        <div class="member-card alumni-card">
          <div class="member-image-wrapper">
            <% if alumni.image.present? %>
              <%= image_tag alumni.image, alt: alumni.name, class: "member-photo" %>
            <% else %>
              <div class="member-placeholder">
                <i class="fa-solid fa-user-graduate"></i>
              </div>
            <% end %>
            <div class="member-overlay">
              <a href="mailto:<%= alumni.mail %>" class="overlay-contact" title="सम्पर्कं करोतु">
                <i class="fa-solid fa-envelope"></i>
              </a>
              <% if alumni.linkedin.present? %>
                <a href="<%= alumni.linkedin %>" target="_blank" class="overlay-contact" title="LinkedIn">
                  <i class="fa-brands fa-linkedin"></i>
                </a>
              <% end %>
            </div>
          </div>
          
          <div class="member-details">
            <h3 class="member-name"><%= alumni.name %></h3>
            <div class="member-info-row">
              <span class="member-tag alumni-tag"><i class="fa-solid fa-graduation-cap"></i> <%= alumni.branch %></span>
            </div>
          </div>
          
          <div class="card-footer-accent alumni-accent"></div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <i class="fa-solid fa-user-graduate" style="font-size: 64px; color: #ccc;"></i>
      <h2>पूर्वछात्राः शीघ्रमेव प्रदर्शिष्यन्ते</h2>
      <p>कृपया पुनः आगच्छतु</p>
    </div>
  <% end %>
</div>