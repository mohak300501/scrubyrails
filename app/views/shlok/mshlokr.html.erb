<div class="button">
    <%= link_to "नूतनः श्लोकः योजयतु", new_shlok_path, class: "anone" %>
</div>

<% for i in @shloks do %>
    <%= content_tag :div, class: "shloks" do %>
        <div class="title">
            <%= i.title %><br/>
        </div>

        <div class="shlok">
            <p><%= i.shlok.html_safe %></p>
        </div>

        <div>
            <audio src="<%= rails_blob_url(i.audio) %>" controls/></audio>
        </div>

        <div class="translation">
            <%= i.translation.html_safe %><br/>
        </div>

        <div class="updel">
            <%= link_to shlok_path(i.id), class: "anone" do %>
                <div class="button">परिवर्तयतु</div>
            <% end %>
            <%= link_to shlok_delete_path(i.id), method: "delete", data: {:confirm => "Are you sure you want to delete this shlok?"}, class: "anone" do %>
                <div class="button">विनश्यतु</div>
            <% end %>
        </div>
    <% end %>
<% end %>