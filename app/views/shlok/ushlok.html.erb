<% for i in @shloks do %>
    <div class="courses">
        <div class="title">
            <%= i.title %><br/>
        </div>

        <div class="cont">
            <p><%= i.shlok.html_safe %></p>
        </div>

        <div>
            <audio src="<%= rails_blob_url(i.audio) %>" controls/>
        </div>

        <div class="info">
            <%= i.translation.html_safe %>
        </div>
    </div>
<% end %>
