<% for i in @shloks do %>
    <div class="shloks">
        <div class="title">
            <%= i.title %><br/>
        </div>

        <div class="shlok">
            <p><%= i.shlok.html_safe %></p>
        </div>

        <div class="translation">
            <%= i.translation.html_safe %><br/>
        </div>
    </div>
<% end %>
