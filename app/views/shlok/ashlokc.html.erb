<div><b>नमस्ते</b></div>
<%= link_to "Back", "../shlok/ashlokr" %>
<h1>नूतनः श्लोकः योजयतु</h1>
<%= form_tag do %>
    <div>
        <%= label_tag :title "शीर्षकं" %><br/>
        <%= text_field_tag :title, nil, :required => true, class: "textfield" %><br/>
        <%= label_tag :shlok "श्लोकः" %><br/>
        <%= text_area_tag :shlok, nil, :required => true, class: "textarea-1" %><br/>
        <%= label_tag :translation "अनुवादः" %><br/>
        <%= text_area_tag :translation, nil, :required => true, class: "textarea-2" %>
    </div>
    <div>
        <%= submit_tag "अग्रेस्थापनं करोतु", :class => "button" %>
    </div>
<% end %>