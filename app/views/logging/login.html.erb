<h1>Log In</h1>
<%= form_tag login_post_path do %>
    <div>
        <%= label_tag :email %><br/>
        <%= text_field_tag :email, nil, :required => true %><br/>
        <%= label_tag :password %><br/>
        <%= password_field_tag :password, nil, :required => true %>
    </div>
    <div>
        <%= submit_tag "Log In", :class => "button" %>
    </div>
<% end %>
<br/>
<% flash.each do |type, msg| %>
    <div>
        <%= msg %>
    </div>
<% end %>
<br/>
<% if session[:moru] == "user" %>
    New user? <%= link_to "Register", new_path %> instead.
<% end %>