<h1>Please fill the following details</h1>

<%= form_tag form_post_path, multipart: true do %>
    <div>
        <%= label_tag "Name" %><br/>
        <%= text_field_tag :name, nil, :required => true, class: "textfield", value: @user.name %><br/><br/>

        <%= label_tag "Email" %><br/>
        <%= email_field_tag :email, nil, :required => true, class: "textfield", value: @user.email %><br/><br/>

        <%= label_tag "Country" %><br/>
        <%= text_field_tag :country, nil, :required => true, class: "textfield", value: @user.profile ? @user.country : ''  %><br/><br/>

        <%= label_tag "State" %><br/>
        <%= text_field_tag :state, nil, :required => true, class: "textfield", value: @user.profile ? @user.state : ''  %><br/><br/>

        <%= label_tag "PIN" %><br/>
        <%= text_field_tag :pin, nil, :required => true, class: "textfield", value: @user.profile ? @user.pin : ''  %><br/><br/>

        <%= label_tag "Gender" %><br/>
        <%= radio_button_tag :gender, "Male", @user.profile ? (@user.gender == "Male" ? true : false) : false %><br/><br/>
        <%= radio_button_tag :gender, "Female", @user.profile ? (@user.gender == "Female" ? true : false) : false %><br/><br/>
        <%= radio_button_tag :gender, "Other", @user.profile ? (@user.gender == "Other" ? true : false) : true %><br/><br/>

        <%= label_tag "Age" %><br/>
        <%= text_field_tag :age, nil, :required => true, class: "textfield", value: @user.profile ? @user.age : ''  %><br/><br/>

        <%= label_tag "Mobile no." %><br/>
        <%= text_field_tag :mobile, nil, :required => true, class: "textfield", value: @user.profile ? @user.mobile : ''  %><br/><br/>

        <%= label_tag "Sanskrit Proficiency Level" %><br/>
        <% sanslevel = ["Spoken Sanskrit Class", "Subhashitam Sanskritam Course IITR", "Other course"] %>
        <% for i in sanslevel %>
            <%= radio_button_tag :sanslevel, i, @user.profile ? (@user.sanslevel == i ? true : false) : false %><br/><br/>
        <% end %>
        <%= radio_button_tag :sanslevel, "No prior experience", @user.profile ? (@user.sanslevel == "No prior experience" ? true : false) : true %><br/><br/>

        <%= label_tag "Academic Qualification" %><br/>
        <% acadqual = ["10th pass", "12th pass", "Bachelor's", "Master's", "PhD"] %>
        <% for i in acadqual %>
            <%= radio_button_tag :acadqual, i, @user.profile ? (@user.acadqual == i ? true : false) : false %><br/><br/>
        <% end %>
        <%= radio_button_tag :acadqual, "Other", @user.profile ? (@user.acadqual == "Other" ? true : false) : true %><br/><br/>
    </div>
    <div>
        <%= submit_tag "Submit", :class => "button" %><br/>
        <%= link_to "Cancel", profile_path %>
    </div>
<% end %>