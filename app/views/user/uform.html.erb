<h2>Please fill the following details</h2>

<%= form_tag form_post_path, multipart: true, class: "uform" do %>
    <%= text_field_tag :name, nil, :required => true, class: "utextfield", value: @user.name, placeholder: "Your name" %><br/><br/>
    <%= email_field_tag :email, nil, :required => true, class: "utextfield", value: @user.email, placeholder: "Your email" %><br/><br/>
    <%= text_field_tag :country, nil, :required => true, class: "utextfield", value: @user.profile ? @user.country : '', placeholder: "Your country" %><br/><br/>
    <%= text_field_tag :state, nil, :required => true, class: "utextfield", value: @user.profile ? @user.state : '', placeholder: "Your state" %><br/><br/>
    <%= text_field_tag :pin, nil, :required => true, class: "utextfield", value: @user.profile ? @user.pin : '', placeholder: "Your PIN code" %><br/><br/>
    
    <% gender = ["-- Choose gender --", "Male", "Female", "Other"] %>
    <select name="gender">
        <% for i in gender %>
            <% value = (i == gender[0]) ? "" : i %>
            <% selected = @user.profile ? (@user.gender == i ? true : false) : ((i == gender[0]) ? true : false) %>
            <% if selected %>
                <option value="<%= value %>" selected><%= i %></option>
            <% else %>
                <option value="<%= value %>"><%= i %></option>
            <% end %>
        <% end %>
    </select><br/><br/>
    <!--<div class="radio">
        <% for i in gender %>
            <% checked = (i == gender[-1])? true :false %>
            <%= radio_button_tag :gender, i, @user.profile ? (@user.gender == i ? true : false) : checked %>
            <%= label_tag i %><br/>
        <% end %><br/><br/><br/>
    </div>-->

    <%= text_field_tag :age, nil, :required => true, class: "utextfield", value: @user.profile ? @user.age : '' %><br/><br/>

    <%= text_field_tag :mobile, nil, :required => true, class: "utextfield", value: @user.profile ? @user.mobile : '' %><br/><br/>

    <% sanslevel = ["-- Sanskrit proficiency level --", "Spoken Sanskrit Class", "Subhashitam Sanskritam Course IITR", "Other course", "No prior experience"] %>
    <div class="radio">
        <% for i in sanslevel %>
            <% checked = (i == sanslevel[-1]) ? true : false %>
            <%= radio_button_tag :sanslevel, i, @user.profile ? (@user.sanslevel == i ? true : false) : checked %>
            <%= label_tag i %><br/>
        <% end %><br/><br/>
    </div>

    <% acadqual = ["-- Academic qualification --", "10th pass", "12th pass", "Bachelor's", "Master's", "PhD", "Other"] %>
    <div class="radio">
        <% for i in acadqual %>
            <% checked = (i == acadqual[-1]) ? true : false %>
            <%= radio_button_tag :acadqual, i, @user.profile ? (@user.acadqual == i ? true : false) : checked %>
            <%= label_tag i %><br/>
        <% end %><br/>
    </div>
    
    <%= submit_tag "Submit", :class => "button" %><br/>
    <%= link_to "Cancel", profile_path %>
<% end %>