<% parts = ["Name", "Email", "Country", "State", "PIN", "Gender", "Age", "Mobile no.", "Sanskrit Proficiency Level",
            "Academic Qualification", "Regid", "Courses registered in"] %>
<% dets = ["name", "email", "country", "state", "pin", "gender", "age", "mobile", "sanslevel", "acadqual", "regid", "courses"] %>

<br/><br/>
<%= form_tag user_sort_path do %>
    <%= text_field_tag :country, nil, class: "textfield", placeholder: "Search by country" %><br/><br/>
    <%= text_field_tag :state, nil, class: "textfield", placeholder: "Search by state" %><br/><br/>
    <%= text_field_tag :pin, nil, class: "textfield", placeholder: "Search by PIN" %><br/><br/>
    <%= text_field_tag :gender, nil, class: "textfield", placeholder: "Search by gender" %><br/><br/>
    <%= text_field_tag :age, nil, class: "textfield", placeholder: "Search by age" %><br/><br/>
    <%= text_field_tag :sanslevel, nil, class: "textfield", placeholder: "Search by Sanskrit Proficiency Level" %><br/><br/>
    <%= text_field_tag :acadqual, nil, class: "textfield", placeholder: "Search by Academic Qualification" %><br/><br/>
    <%= submit_tag "अग्रेस्थापनं करोतु", :class => "button" %><br/>
<% end %>

<table class="profile">
    <tr>
        <% for j in parts %>
            <th><%= j %></th>
        <% end %>
        <th>Delete</th>
    </tr>
    <% for i in @users do %>
        <tr>
            <% for j in 0..11 %>
                <td><%= i[dets[j]] if !i[dets[j]].nil? %></td>
            <% end %>
            <td><%= link_to "Delete", "/../user/" + i.id.to_s + "/del" %></td>
        </tr>
    <% end %>
</table>