<h1>Register as new user</h1>
<%= form_tag newp_path do %>
    <div>
        <%= label_tag :name %><br/>
        <%= text_field_tag :name, nil, :required => true %><br/>
        <%= label_tag :email %><br/>
        <%= text_field_tag :email, nil, :required => true %><br/>
        <%= label_tag :password %><br/>
        <%= password_field_tag :password, nil, :required => true %>
        <%= label_tag "Re-enter Password" %><br/>
        <%= password_field_tag :repass, nil, :required => true %>
    </div>
    <div>
        <%= submit_tag "Log In", :class => "button" %>
    </div>
<% end %>
<br/>
<% flash.each do |type, msg| %>
    <div>
        <%= msg %>
    </div>
<% end %>
<br/>
Already registered? Proceed <%= link_to "Login", user_login_path %>.