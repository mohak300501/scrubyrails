<h1>Sign up as new user</h1>
<% if !session[:otp] %>
    <%= form_tag newp_path do %>
        <div>
            <%= label_tag :name %><br/>
            <%= text_field_tag :name, nil, :required => true %><br/>
            <%= label_tag :email %><br/>
            <%= text_field_tag :email, nil, :required => true %><br/>
            <%= label_tag :password %><br/>
            <%= password_field_tag :password, nil, :required => true %><br/>
            <%= label_tag "Re-enter Password" %><br/>
            <%= password_field_tag :repass, nil, :required => true %>
        </div>
        <div>
            <%= submit_tag "Submit", :class => "button" %>
        </div>
    <% end %>
<% else %>
    <%= form_tag otpp_path do %>
        <%= label_tag :otp %><br/>
        <%= text_field_tag :otp, nil, :required => true %><br/>
        <%= submit_tag "Submit", :class => "button" %>
    <% end %>
<% end %>
<br/>
<% flash.each do |type, msg| %>
    <div>
        <%= msg %>
    </div>
<% end %>
<br/>
Already registered? Proceed to <%= link_to "Login", user_login_path %>.