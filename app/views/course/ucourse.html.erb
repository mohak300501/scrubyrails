<div class="courses-page">
  <div class="page-header">
  <h1>पाठ्यक्रमाः</h1>
  <p class="subtitle">सर्वाः पाठ्यक्रमाः अन्वेषयतु तथा च पञ्जीकरणं करोतु</p>

  <div class="courses-container">
    <% @courses.each do |course| %>
      <div class="course-card">
        <div class="course-image">
          <%= image_tag rails_blob_url(course.image), alt: course.name %>
          <div class="course-overlay">
            <span class="course-badge"><%= course.cname %></span>
          </div>
        </div>

        <div class="course-content">
          <h2 class="course-title"><%= course.name %></h2>

          <div class="course-info">
            <p><%= truncate(strip_tags(course.description), length: 150) %></p>
          </div>

          <div class="button">
            <%= link_to course_uview_path(course.cname), class: "anone" do %>
              अधिकं पठतु
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
