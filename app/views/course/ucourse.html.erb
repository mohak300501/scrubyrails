<% for i in @courses do %>
    <div class="courses">
        <div class="title">
            <%= i.name %><br/>
        </div>

        <div class="image">
            <img src="<%= rails_blob_url(i.image) %>", class="img-100" />
        </div>

        <div class="info">
            <p><%= i.description.html_safe %></p>
        </div>

        <div class="button">
            <%= link_to "Read more", course_uview_path(i.cname), class: "anone" %>
        </div>
    </div>
<% end %>
