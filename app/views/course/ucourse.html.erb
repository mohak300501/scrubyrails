<% flash.each do |type, msg| %>
    <div>
        <%= msg %>
    </div>
<% end %>

<% for i in @courses do %>
    <div class="courses">
        <div class="title">
            <%= i.name %><br/>
        </div>

        <div>
            <img src="<%= rails_blob_url(i.image) %>" />
        </div>

        <div class="description">
            <p><%= i.description.html_safe %></p>
        </div>

        <div class="updel">
            <%= link_to "../course/" + i.name + "/reg" do %>
                <div class="button">Register</div>
            <% end %>
        </div>
    </div>
<% end %>
