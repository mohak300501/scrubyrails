<% i = @course %>
<div class="courses">
    <div class="button">
        <%= link_to "Back", courses_path, class: "anone" %>
    </div>

    <div class="title">
        <%= i.name %><br/>
    </div>

    <div>
        <img src="<%= rails_blob_url(i.image) %>" />
    </div>

    <div class="info">
        <%= i.description.html_safe %>
    </div>

    <div class="info">
        <%= i.more.html_safe %>
    </div>

    <% if @user_regd > 0 %>
        <div><b>You are registered in this course.</b></div>
    <% else %>
        <%= link_to "../../course/" + i.cname + "/reg", class: "anone",
            :confirm => "Are you sure you want to register for this course?" do %>
            <div class="button">Register</div>
        <% end %>
    <% end %>
</div>